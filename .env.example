# Environment variables for local development
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://catlog_user:catlog_password@postgres:5432/catlog

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Redis Configuration
REDIS_URL=redis://redis:6379

# Kafka Configuration
KAFKA_BROKER=kafka:29092
PRODUCER_INTERVAL_MS=60000
CONSUMER_GROUP_ID=anime-popularity-group

# ETL Configuration
ENABLE_CLOUD_SYNC=false
JIKAN_RATE_LIMIT_DELAY=1.0
JIKAN_MAX_RETRIES=3
ETL_BATCH_SIZE=100
ETL_MAX_PAGES=10

# BigQuery Configuration (optional)
GCP_PROJECT_ID=
BIGQUERY_DATASET=catlog_anime_data
BIGQUERY_TABLE=processed_anime
BIGQUERY_LOCATION=US
GOOGLE_APPLICATION_CREDENTIALS=

# Slack Notifications (optional)
SLACK_WEBHOOK_URL=

# Logging
LOG_LEVEL=info