# Production Environment Variables
NODE_ENV=production

# Database (Production)
DATABASE_URL=postgresql://username:password@localhost:5432/catlog_prod
POSTGRES_DB=catlog_prod
POSTGRES_USER=catlog_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Application
JWT_SECRET=CHANGE_THIS_TO_SECURE_SECRET_KEY
FRONTEND_URL=https://catlog.com
NEXT_PUBLIC_API_URL=https://api.catlog.com/api

# Ports
FRONTEND_PORT=80
BACKEND_PORT=3001

# External APIs
JIKAN_API_URL=https://api.jikan.moe/v4

# SSL/TLS (for production)
SSL_CERT_PATH=/etc/ssl/certs/catlog.crt
SSL_KEY_PATH=/etc/ssl/private/catlog.key
